{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "probe-rs-debug",
      "request": "launch",
      "name": "Debug Pico W (probe-rs)",
      "chip": "RP2040",
      "cwd": "${workspaceFolder}",
      "flashingConfig": {
        "flashingEnabled": true,
        "haltAfterReset": false
      },
      "coreConfigs": [
        {
          "coreIndex": 0,
          "programBinary": "${workspaceFolder}/target/thumbv6m-none-eabi/debug/main",
          "rttEnabled": true,
          "rttChannelFormats": [
            {
              "channelNumber": 0,
              "dataFormat": "Defmt",
              "showLocation": true
            }
          ]
        }
      ],
      "connectUnderReset": false,
      "preLaunchTask": "cargo build (thumbv6m)",
      "env": {
        "DEFMT_LOG": "info"
      }
    }
  ]
}
