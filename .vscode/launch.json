{
    "version": "0.2.0",
    "configurations": [
      {
        "preLaunchTask": "build",
        "type": "probe-rs-debug",
        "request": "launch",
        "name": "Debug RP2040",
        "cwd": "${workspaceFolder}",
        "chip": "RP2040",
        "connectUnderReset": false,
        "speed": 20000,
        "flashingConfig": {
          "flashingEnabled": true,
          "haltAfterReset": false
        },
        "coreConfigs": [
          {
            "programBinary": "${workspaceFolder}/target/thumbv6m-none-eabi/debug/main",
            "rttEnabled": true,
            "rttChannelFormats": [
              {
                "channelNumber": 0,
                "dataFormat": "Defmt",
                "showLocation": true
              }
            ]
          }
        ]
      }
    ]
  }
